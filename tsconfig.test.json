{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node", "jsdom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/main/*", "src/renderer/src/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": [
    "src/**/__tests__/**/*",
    "vitest.config.*.ts"
  ],
  "exclude": ["node_modules", "dist", "out"]
}
